<section class="section layout-{{ layout.acf_fc_layout }} d-flex align-items-center">
  <div class="bg-cover overlay">
    <div class="rellax">
      <picture>
        <source type="image/webp"
          sizes="(max-width: {{ image_sizes|last }}px) 100vw, {{ image_sizes|last }}px"
          srcset="{% for size in image_sizes %}{{ Image(layout.image).src|resize(size)|towebp }} {{ size }}w{{ loop.last ? '' : ',' }}{% endfor %}">

          <img class="bg-cover-img object-position-{{ layout.image_y_position }}"
            sizes="(max-width: {{ image_sizes|last }}px) 100vw, {{ image_sizes|last }}px"
            srcset="{% for size in image_sizes %}{{ Image(layout.image).src|resize(size) }} {{ size }}w{{ loop.last ? '' : ',' }}{% endfor %}"
            src="{{ Image(layout.image).src|resize(image_sizes|last) }}" alt="{{ post.thumbnail.alt }}">
      </picture>
    </div>
  </div>

  <div class="texas-stamp">
    <img loading="lazy" class="img-fluid" src="{{ theme.path }}/dist/assets/texas-stamp.svg" alt="Texas Star Nut &amp; Food Co.&trade;">
  </div>

  <div class="container py-5 py-lg-6 text-center text-white text-shadow">
    {% if layout.title %}
      <h1 class="display-4">{{ layout.title }}</h1>
    {% endif %}

    {% if layout.subtitle %}
      <span class="h2 mb-0">{{ layout.subtitle }}</span>
    {% endif %}
  </div>
</section>