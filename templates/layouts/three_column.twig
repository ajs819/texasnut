<section class="section layout-{{ layout.acf_fc_layout }}">
  <div class="container py-5 text-center">
    {% if layout.title %}
      <h2>{{ layout.title }}</h2>
    {% endif %}

    {% if layout.text %}
      <div class="row justify-content-center">
        <div class="col-12 col-lg-8">
          <div class="lead">
            {{ layout.text }}
          </div>
        </div>
      </div>
    {% endif %}

    {% if layout.columns %}
      <div class="row justify-content-center gy-3 mt-4">
        {% for column in layout.columns %}
          <div class="col-12 col-lg-4">
            {% if column.image %}
              <div class="px-5 mb-4">
                <div class="ratio ratio-4x3">
                  <picture>
                    <source srcset="{{ Image(column.image).src|towebp }}" type="image/webp">
                    <img class="w-100 h-100" loading="lazy" src="{{ Image(column.image).src }}" alt="{{ column.image.alt }}">
                  </picture>
                </div>
              </div>
            {% endif %}
            
            <h4>{{ column.title }}</h4>
            {{ column.text }}
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</section>