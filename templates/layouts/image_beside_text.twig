<section class="section layout-{{ layout.acf_fc_layout }}">
  <div class="container py-5 py-md-6">
    <div class="row justify-content-between align-items-center gy-3">
      <div class="col-12 col-md-4 {{ layout.order == 'text_image' ? 'order-md-2' }}">
        {% if layout.image %}
          <div class="row justify-content-center">
            <div class="col-7 col-md-12 col-lg-10 mb-4 mb-lg-0">
              <div class="ratio ratio-{{ layout.image_container_ratio }}">
                <picture>
                  <source srcset="{{ Image(layout.image).src|towebp }}" type="image/webp">
                  <img class="w-100 h-100" loading="lazy" src="{{ Image(layout.image).src }}" alt="{{ layout.image.alt }}">
                </picture>
              </div>
            </div>
          </div>
        {% endif %}
      </div>

      <div class="col-12 col-md-7 {{ layout.order == 'text_image' ? 'order-md-1' }}">
        {% if layout.title %}
          <h2 class="br-mobile-none">{{ layout.title }}</h2>
        {% endif %}

        {% if layout.subtitle %}
          <p class="lead br-mobile-none mb-0">
            {{ layout.subtitle }}
          </p>
        {% endif %}

        {{ layout.text }}

        {% if layout.link %}
          <div class="text-center text-md-start mt-auto">
            <a href="{{ layout.link.url }}" target="{{ layout.link.target }}" class="btn {{ layout.link_style }} mt-3">
              {{ layout.link.title }}
            </a>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>